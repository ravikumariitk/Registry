  <body>
<div>



  <form action="/find" method="post" id="">

  
  <div class="container account-settings-wrapper" style="margin-left: 250px;">
    <div class="row gutters">
        <div class="col-xl-9 col-lg-9 col-md-12 col-sm-12 col-12">
            <div class="card h-100">
                <h2 style="padding-top: 20px; padding-left: 10px;">Search your Classmates</h2>
                <hr>
                <div class="card-body">
                    <div class="row gutters">
                        <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                            <div class="form-group">
                                <label for="fullName">Full Name</label>
                                <input type="text" class="form-control" name="givenName" id="fullName" placeholder="Enter full name">
                            </div>
                        </div>
                        <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                            <div class="form-group">
                                <label for="eMail">Roll Number</label>
                                <input  class="form-control" name="givenRoll" id="eMail" placeholder="Enter roll no.">
                            </div>
                        </div>
                        <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                            <div class="form-group">
                                <label for="phone">User Id</label>
                                <input type="text" class="form-control" name="givenUser_ID" id="phone" placeholder="Enter IITK user id">
                            </div>
                        </div>
                        <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                            <div class="form-group">
                                <label for="website">Branch</label>
                                <input type="text" class="form-control" name="givenBranch" id="website" placeholder="Enter branch">
                            </div>
                        </div>
                    </div><br>
                    <div class="row gutters">
                        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                            <div class="text-left">
                                <a href="/" class="btn btn-secondary">Cancel</a>
                                <button type="submit" id="submit" name="submit" class="btn btn-primary">Search</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</form>
<br>
<br>

















  </div>
  <div class="container">  
    <h5><%= message %></h5>

    <div class="container">
      <div class="row">

        <% data.forEach(element => { %>
          <div class="col-md-4">
            <div class="card user-card">
                <div class="card-header">
                    <h5>Profile</h5>
                </div>
                <div class="card-block">
                    <div class="user-image">
                      <img id="profileImage" src="http://home.iitk.ac.in/~<%= element.User_ID %>/dp" class="img-radius" onerror="this.onerror=null;this.src='https://oa.cc.iitk.ac.in/Oa/Jsp/Photo/<%= element.Roll %>_0.jpg';">

                      <script>
                      document.getElementById('profileImage').onerror = function() {
                          this.onerror = null;  // Prevents infinite loop if the fallback image also fails
                          this.src = 'https://example.com/default-image.jpg';  // Replace with your fallback image URL
                      };
                      </script>
                      
                    </div>
                    <h6 class="f-w-600 m-t-25 m-b-10"><%= element.Name %></h6>
                    <p class="text-muted"><%= element.Roll %> | <%= element.User_ID %> | <%= element.Branch %></p>
                    <hr>
                   
        
                    <p><strong>Current Address:</strong> <%= element.Room %>, <%= element.Hall %> </p>
                    <p><strong>Permanent Address:</strong> <%= element.Location %> </p>
              
                    <hr>
                    <div class="row justify-content-center user-social-link">
                      <div class="col-auto"><a href="http://home.iitk.ac.in/~<%= element.User_ID %>"><i class="fa fa-dribbble text-dribbble"></i></a></div>
                  </div>
                </div>
            </div>
        </div>
    <%  });  %>  
      </div>
  </div>
</div>
